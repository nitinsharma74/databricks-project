{
  "datasets": [
    {
      "name": "hourly_weather_dataset",
      "displayName": "Hourly Weather Dataset",
      "queryLines": [
        "select station_id, station_name, observation_timestamp, text_description, temperature_value, temperature_unit, wind_speed_value, wind_speed_unit, wind_direction_value, wind_direction_unit, visibility_value, visibility_unit, max_temperature_last_24_hours_value, min_temperature_last_24_hours_value ",
        "from workspace.default.prod_hourly_weather_report ",
        "where observation_timestamp >= current_timestamp() - INTERVAL 30 days"
      ]
    }
  ],
  "pages": [
    {
      "name": "daily_trend",
      "displayName": "Daily Trend",
      "pageType": "PAGE_TYPE_CANVAS",
      "layout": [
        {
          "widget": {
            "name": "dashboard_title",
            "multilineTextboxSpec": {
              "lines": [
                "## <span style=\"text-align:center;display:block\">HOURLY WEATHER REPORT</span>"
              ]
            }
          },
          "position": { "x": 0, "y": 0, "width": 6, "height": 1 }
        },
        {
          "widget": {
            "name": "hourly_temperature_per_station",
            "queries": [
              {
                "name": "main_query",
                "query": {
                  "datasetName": "hourly_weather_dataset",
                  "fields": [
                    { "name": "station_name", "expression": "`station_name`" },
                    {
                      "name": "hourly(observation_timestamp)",
                      "expression": "DATE_TRUNC(\"HOUR\", `observation_timestamp`)"
                    },
                    { "name": "temperature_value", "expression": "`temperature_value`" }
                  ],
                  "disaggregated": true
                }
              }
            ],
            "spec": {
              "version": 3,
              "widgetType": "line",
              "encodings": {
                "x": {
                  "fieldName": "hourly(observation_timestamp)",
                  "displayName": "Date / Hour",
                  "scale": { "type": "temporal" }
                },
                "y": {
                  "fieldName": "temperature_value",
                  "displayName": "Temperature",
                  "scale": { "type": "quantitative" }
                },
                "color": {
                  "fieldName": "station_name",
                  "displayName": "Station",
                  "scale": { "type": "categorical" },
                  "legend": { "position": "bottom" }
                }
              },
              "frame": {
                "showTitle": true,
                "title": "Temperature Per Hour"
              }
            }
          },
          "position": { "x": 0, "y": 1, "width": 6, "height": 5 }
        },
        {
          "widget": {
            "name": "weather_description_per_hour",
            "queries": [
              {
                "name": "main_query",
                "query": {
                  "datasetName": "hourly_weather_dataset",
                  "fields": [
                    { "name": "station_name", "expression": "`station_name`" },
                    {
                      "name": "hourly(observation_timestamp)",
                      "expression": "DATE_TRUNC(\"HOUR\", `observation_timestamp`)"
                    },
                    { "name": "text_description", "expression": "`text_description`" }
                  ],
                  "disaggregated": true
                }
              }
            ],
            "spec": {
              "version": 3,
              "widgetType": "bar",
              "encodings": {
                "x": {
                  "fieldName": "hourly(observation_timestamp)",
                  "displayName": "Date / Hour",
                  "scale": { "type": "temporal" }
                },
                "y": {
                  "fieldName": "text_description",
                  "displayName": "Weather Description",
                  "scale": { "type": "categorical" }
                },
                "color": {
                  "fieldName": "station_name",
                  "displayName": "Station",
                  "scale": { "type": "categorical" },
                  "legend": { "position": "bottom" }
                }
              },
              "frame": {
                "showTitle": true,
                "title": "Weather Description Per Hour"
              }
            }
          },
          "position": { "x": 0, "y": 6, "width": 6, "height": 5 }
        }
      ]
    }
  ],
  "uiSettings": {
    "theme": {},
    "applyModeEnabled": false
  }
}
